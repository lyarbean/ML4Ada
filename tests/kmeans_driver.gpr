project Kmeans_Driver is
for Source_Dirs use ("../source", ".");
for Object_Dir use "./obj";
for Library_Dir use "./lib";
for Exec_Dir use "./bin";
for Main use ("kmeans_driver", "kmeans_driver2", "kmeans_driver3");
package Compiler is
   for Default_Switches ("Ada")
   use ("-gnaty", "-gnatyg", "-pipe", "-v" , "-O3",
        --  To allow vectorize, uncomment next line, and gain 10% speed up
        --  "-ffast-math", "-fassociative-math", "-funsafe-math-optimizations",
        "-gnat2012", "-march=native", "-mtune=native");
end Compiler;
end Kmeans_Driver;
